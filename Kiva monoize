desc:Kiva monoize

slider1:choice=0<0,2,1>0=Left 1=Sum 2=Right

in_pin:left input
in_pin:right input
out_pin:left output
out_pin:right output

@init

@slider

@block

@sample
choice == 0 ? (
  spl1 = spl0;
);

choice == 1 ? (
  sum = (spl0 + spl1) / 2;
  spl0 = sum;
  spl1 = sum;
);

choice == 2 ? (
  spl0 = spl1;
);

