desc:Kiva instant FullScale

slider1:gain_db=-30<-150,0,1>gain (dB)

in_pin:left input
in_pin:right input
out_pin:left output
out_pin:right output

@init
last_gain=10^(gain_db/20);

@slider
next_gain=10^(gain_db/20);

@block
d_gain = (next_gain - last_gain)/samplesblock;

@sample
spl0 > 0 ? (
  spl0 = 1;
) : (
  spl0 = -1;
);

spl1 > 0 ? (
  spl1 = 1;
) : (
  spl1 = -1;
);

spl0 *= last_gain;
spl1 *= last_gain;
last_gain += d_gain;

